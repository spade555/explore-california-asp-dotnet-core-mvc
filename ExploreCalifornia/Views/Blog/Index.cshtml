@model IEnumerable<ExploreCalifornia.Models.Post>
@{
    Layout = "_Layout";
}

<h1>Blog</h1>

<p>Below are the lates posts:</p>

<div class="blog-posts">
    @foreach (var post in Model)
    {
        <article class="blog-post">
            <h1>
                @Html.ActionLink(post.Title, "Post", "Blog",
                    new { year = post.Posted.Year, month = post.Posted.Month, key = post.Key }
                    )
            </h1>

            <div class="details">
                Posted <span>@post.Posted</span> by <span>@post.Author</span>
            </div>
            <div class="content">
                @post.Body
            </div>
        </article>
    }
</div>